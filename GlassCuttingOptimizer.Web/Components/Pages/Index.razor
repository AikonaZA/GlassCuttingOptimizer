<!-- Pages/Index.razor -->
@page "/"
@inject ApiService ApiService

<h3>Glass Cutting Optimization</h3>

<button class="btn btn-primary" @onclick="OptimizeCutting">Optimize Cutting</button>

<h4>Stock Sheets</h4>
<ul>
    @foreach (var sheet in stockSheets)
    {
        <li>@sheet.Width x @sheet.Height (Quantity: @sheet.Quantity)</li>
    }
</ul>

@if (optimizationResult != null)
{
    <h4>Optimization Result</h4>
    <p>Waste Percentage: @optimizationResult.WastePercentage%</p>
    <div class="layout-container">
        <!-- Visual representation of the cutting layout can go here -->
    </div>
}

@code {
    private List<StockSheet> stockSheets = new();
    private OptimizationResultDTO optimizationResult;

    protected override async Task OnInitializedAsync()
    {
        stockSheets = await ApiService.GetAllStockSheetsAsync();
    }

    private async Task OptimizeCutting()
    {
        optimizationResult = await ApiService.OptimizeCuttingAsync();
    }
}
